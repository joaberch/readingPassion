<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="readingPassion.MainPage">

    <ScrollView>
        <VerticalStackLayout BackgroundColor="#ABABAB">
            <FlexLayout JustifyContent="Center" AlignItems="Start" Margin="0, 10, 0, 0">
                <ImageButton Source="logo" Margin="0, 0, 5, 0"/>
                <Label Text="BookPassion" FontFamily="ImperialScript" FontSize="30" Margin="5, 0, 0, 0"/>
            </FlexLayout>

            <Border Stroke="Black" StrokeThickness="0.9" StrokeShape="RoundRectangle 10, 10, 10, 10" WidthRequest="350" Padding="1.5" Margin="0, 10, 0, 0">
                <SearchBar Placeholder="Search Books..."/>
            </Border>

            <FlexLayout JustifyContent="SpaceAround" Margin="0, 25, 0, 0">
                <Label Text="Reprendre lecture" FontFamily="ImperialScript" FontSize="20"/>
                <Label Text="Voir plus" TextColor="Blue" FontFamily="ImperialScript" FontSize="20"/><!--TODO clickable-->
            </FlexLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
